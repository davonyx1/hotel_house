{% extends "base.html.twig" %}

{% block title %}Tous les slider{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Tous les Slider</h1>

    <div class="row">
        <div class="col-10 mx-auto my-4">
            <h2 class="text-center">les sliders</h2>
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Photo</th>
                    <th>Ordre</th>
                    <th>Date Enregistrement</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for slider in sliders %}
                    
                
                    <tr>
                        <td>{{ slider.id }}</td>
                        <td>
                            <img src="{{ asset('uploads/' ~ slider.photo) }}" alt="Photo de chambre" class="img-thumbnail">
                        </td>
                        <td>{{ slider.ordre }}</td>
                        <td>{{ slider.createdAt | date('d/m/Y') }}</td>
                        <td>
                            <a href="#" title="Modifier le slider" class="text-center align-middle text-warning"><i class="fa-duotone fa-arrow-up-right-from-square"></i>"></i></a>
                            <a href="#" title="Archiver le slider" class="text-center align-middle text-warning"><i class="<i class="fa-solid fa-circle-xmark"></i>"></i>"></i></a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>            
            </table>
        
        
        
        
        
        
        </div>
    </div>



{% endblock %}