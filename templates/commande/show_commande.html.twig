{% extends "base.html.twig" %}

{% block title %}Gérer Commande{% endblock %}

{% block body %}

<h1 class="text-center">Commande</h1>

<div class="row">
    <div class="col-10 mx-auto my-4">
        <table class="table">
            <thead>
                <tr>
                    <th>Commande</th>
                    <th>Chambre</th>
                    <th>Date_arrivee</th>
                    <th>Date_depart</th>
                    <th>Prix_total</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Telephone</th>
                    <th>Email</th>
                    <th>Date et heure d'enregistrement</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for commande in commandes %}
                
                <tr>
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.chambre.id }}</td>
                    <td>{{ commande.date_arrivee }}</td>
                    <td>{{ commande.date_depart }}</td>
                    <td>{{ commande.prix_total }}</td>
                    <td>{{ commande.prenom }}</td>
                    <td>{{ commande.nom }}</td>
                    <td>{{ commande.telephone }}</td>
                    <td>{{ commande.email }}</td>
                    <td>{{ commande.createdAt | date('d/m/Y H:i:s') }}</td>
                    <td>
                        <a href="#" class="text-info" title="Modifier Commande"><i></i></a>
                        <a href="#" class="text-info" title="Archiver Commande"><i></i></a>
                    
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    
    </div>
</div>



{% endblock %}